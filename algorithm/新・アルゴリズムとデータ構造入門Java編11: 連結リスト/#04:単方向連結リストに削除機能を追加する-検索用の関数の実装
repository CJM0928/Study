// 動画で作成した単方向連結リストに、以下の条件を満たすように検索用の関数を実装してください。

// ・与えられた値 value を持つ最初のノードを返す
// ・そのようなノードがない場合は ダミーノード を返す

//  期待する出力値

// 1 2 3
// 1 2

import java.util.Scanner;

class Node {
	int value;
	Node next;

	Node(int value) {
		this.value = value;
	}
}


class List {
	Node dummy;

	List() {
		dummy = new Node(-1);
		dummy.next = dummy;
	}

	void print() {
		for (Node x = dummy.next; x != dummy; x = x.next) {
			System.out.print(x.value + " ");
		}
		System.out.println();
	}

	Node find(int value) {
		// ここにコードを書く
		for (Node x = dummy.next; x != dummy; x = x.next) {
			if(x.value == 2){
			    return x;
			}
		}
		return dummy;
	}

	Node insertAfter(Node x, int value) {
		Node newNode = new Node(value);
		newNode.next = x.next;
		x.next = newNode;
		return newNode;
	}

	void eraseAfter(Node x) {
		if (x.next == dummy) {
			throw new RuntimeException("ダミーノードは削除できません");
		}
		x.next = x.next.next;
	}

}


public class Main {

	public static void main(String[] args) {
		List list = new List();
		Node node1 = list.insertAfter(list.dummy, 1);
		Node node2 = list.insertAfter(node1, 2);
		Node node3 = list.insertAfter(node2, 3);

		list.print();

		list.eraseAfter(list.find(2));

		list.print();
	}
}
